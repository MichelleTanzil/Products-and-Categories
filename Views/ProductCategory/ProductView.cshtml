@model ProductView

<h1 class="text-center">Products | <a asp-action="CategoryView" asp-controller="ProductCategory">Categories</a></h1>

<div class="container">
  <div class="modal-body row">
    <div class="col-md-6">
      <form asp-action="NewProduct" asp-controller="ProductCategory">
        <div class="form-group">
          <label asp-for="product.ProductName"></label>
          <input asp-for="product.ProductName" class="form-control">
          <span asp-validation-for="product.ProductName" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="product.Description"></label>
          <input asp-for="product.Description" class="form-control">
          <span asp-validation-for="product.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="product.Amount"></label>
          <input asp-for="product.Amount" class="form-control">
          <span asp-validation-for="product.Amount" class="text-danger"></span>
        </div>
        <button type="submit"class="btn btn-primary">Submit</button>
      </form>
    </div>
    <div class="col-md-6">
      <ul>
      @foreach (var product in Model.allproducts)
      {
        <p><a asp-action="OneProductView" asp-controller="ProductCategory" asp-route-productid="@product.ProductId">@product.ProductName</a></p>
      }
      </ul>
    </div>
  </div>
</div>

<a asp-action="Logout" asp-controller="User" class="btn btn-primary">Logout</a>